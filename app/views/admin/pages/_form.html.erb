<%= form_for([:admin, @page], html: { class: "autofocus" }) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title, class: "input-xxlarge" %>

  <div class="row">
    <div class="span4">
     <%= f.label :slug %>
     <%= f.text_field :slug %>
    </div>
    <div class="span4">
      <%= f.label :parent_page %>
      <%= f.select :parent_id, Page.get_pages_tree, include_blank: "No parent" %>
    </div>
  </div>

  <%= f.hidden_field :layout, :value => "single_column" %>

  <%= f.label :published_at %>
  <%= f.date_select :published_at %>

  <div>
    <%= f.label :content %>
    <%= f.text_area :content, class: "none" %>
    <div class="ace"><%= @page.content %></div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_pages_path, class: "btn" %>
  </div>
<% end %>
