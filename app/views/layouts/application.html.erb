<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? "#{yield(:title)} &mdash; Society of Software Engineers @ RIT".html_safe : "Society of Software Engineers @ RIT" %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="outer_container">
    <div id="top_nav_wrapper">
      <div id="top_nav">
        <%= link_to root_url do %>
          <%= image_tag "logo-white.png", 
            alt: "Society of Software Engineers", id: "logo" %>
        <% end %>

        <div id="nav_links">
          <%= active_link_to "HOME", root_path %>
          <%= active_link_to "NEWS", "/news" %>
          <%= active_link_to "EVENTS", "/events" %>
          <%= active_link_to "PROJECTS", "/projects" %>
          <%= active_link_to "ABOUT", "/about" %>
          <% unless signed_in? %>
            <%= link_to "LOGIN", auth_path, class: "login" %>
          <% else %>
            <%= link_to "LOGOUT", auth_logout_path, class: "login" %>
          <% end %>
        </div>

        <div class="clear"></div>
      </div>
    </div>

    <%= yield :header %>

    <div id="content_wrapper">
      <% if content_for? :sidebar %>
        <div id="content_left">
          <%= render partial: "shared/flash", locals: { flash: flash } %>
          <%= yield %>
        </div>
        <div id="content_right">
          <%= yield :sidebar %>
        </div>
      <% else %>
        <%= render partial: "shared/flash", locals: { flash: flash } %>
        <%= yield %>
      <% end %>

      <div class="clear"></div>

    </div>
    <div id="footer">

      All content is Copyright &copy; <%= Time.now.year %> RIT Society of Software Engineers.

    </div>
  </div>
</body>
</html>

